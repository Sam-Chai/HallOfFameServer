{
  "name": "@toverux/halloffame-server",
  "private": true,
  "scripts": {
    "pm:update": "mise self-update && mise up --interactive --bump && mise exec bun -- bunx npm-check-updates -i && mise exec bun -- bun update",
    "prisma": "bun prisma/run-prisma.ts",
    "check:rw": "tsc --noEmit; biome check --fix --error-on-warnings",
    "check:ro": "tsc --noEmit; biome check --error-on-warnings",
    "check": "bun check:rw",
    "build:client:watch": "ng build --watch --configuration development",
    "run:cli": "TF_CPP_MIN_LOG_LEVEL=1 bun projects/server/cli/main.ts",
    "run:cli:remote": "bun --env-file=.env.remote run:cli",
    "run:server": "TF_CPP_MIN_LOG_LEVEL=1 bun projects/server/main.ts",
    "run:server:watch": "TF_CPP_MIN_LOG_LEVEL=1 bun --watch --no-clear-screen --inspect projects/server/main.ts",
    "// Useful when working on the mod with the editor and game open so the server does not consume too much memory": "",
    "run:server:light": "TF_CPP_MIN_LOG_LEVEL=1 bun --smol projects/server/main.ts",
    "serve:client": "ng serve",
    "build": "bun prisma generate && bun check:ro && ng build",
    "start": "bun run:server"
  },
  "packageManager": "bun@1.2.21",
  "engines": {
    "node": ">=24.1.0"
  },
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/common": "^20.2.3",
