    "@angular/core": "^20.2.3",
    "@angular/forms": "^20.2.3",
    "@angular/platform-browser": "^20.2.3",
    "@angular/platform-browser-dynamic": "^20.2.3",
    "@angular/platform-server": "^20.2.3",
    "@angular/router": "^20.2.3",
    "@angular/ssr": "^20.2.1",
    "@azure/storage-blob": "^12.28.0",
    "@biomejs/biome": "^2.2.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@fontsource-variable/overpass": "^5.2.6",
    "@fontsource/ibm-plex-mono": "^5.2.6",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "@prisma/client": "^6.15.0",
    "@sentry/bun": "^10.8.0",
    "@sentry/nestjs": "^10.8.0",
    "@sentry/node": "^10.8.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "chalk": "^5.6.0",
