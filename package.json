    "common-tags": "^1.8.2",
    "date-fns": "^4.1.0",
    "fastify": "^5.5.0",
    "filesize": "^11.0.2",
    "lefthook": "^1.12.3",
    "lru-cache": "^11.1.0",
    "mongodb": "^6.19.0",
    "nest-commander": "^3.19.0",
    "open": "^10.2.0",
    "openai": "^5.16.0",
    "p-lazy": "^5.0.0",
    "prisma": "^6.15.0",
    "resolve-accept-language": "^3.1.13",
    "rxjs": "~7.8.2",
